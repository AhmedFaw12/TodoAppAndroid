<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="noActionBar" parent="Theme.TodoApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="splashBackground">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="toolbarTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calenderViewItemStyle" parent = "Theme.TodoApp">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="CalenderViewItemDayAndDayOfWeekUnSelectedStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="taskCardViewBackgroudColor">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="TaskDescTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="titleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutEditStyle">
        <item name="android:background" >@color/dark</item>
        <item name="android:textColor" > @color/white</item>
    </style>

    <style name="EditCardViewStyle">
        <item name="android:backgroundTint">@color/dark</item>
    </style>

    <style name="EditBackgroundActivity">
        <item name="android:background">@color/dark_bg</item>
    </style>

    <style name="EditActivityTitleTextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>